@model AppleShop.Models.Order

@{
    ViewBag.Title = "Chi tiết Đơn hàng #" + Model.Id;
}

<div>
    <h4>Thông tin Đơn hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Mã Đơn hàng</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

        <dt class="col-sm-3">Khách hàng</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Email)</dd>

        <dt class="col-sm-3">Ngày đặt</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderDate)</dd>

        <dt class="col-sm-3">Tên người nhận</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ShipName)</dd>

        <dt class="col-sm-3">Địa chỉ giao</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ShipAddress)</dd>

        <dt class="col-sm-3">Số điện thoại</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ShipPhoneNumber)</dd>

        <dt class="col-sm-3">Tổng tiền</dt>
        <dd class="col-sm-9">@Model.Total.ToString("N0") ₫</dd>
    </dl>

    <h4 class="mt-4">Các sản phẩm trong đơn hàng</h4>
    <table class="table">
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@item.UnitPrice.ToString("N0") ₫</td>
                <td>@((item.Quantity * item.UnitPrice).ToString("N0")) ₫</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Quay lại Danh sách", "Index", null, new { @class = "btn btn-secondary" })
</p>