@model AppleShop.Models.Product

@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewBag.Title: @Model.Name</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Tên sản phẩm</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4">Danh mục</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Name)</dd>

                    <dt class="col-sm-4">Giá</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("N0") ₫</dd>

                    <dt class="col-sm-4">Mô tả</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-4">Sản phẩm nổi bật?</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsFeatured)
                        {
                            <span class="badge bg-success">Có</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Không</span>
                        }
                    </dd>
                </dl>
            </div>

            <div class="col-md-4">
                <h5 class="text-center">Hình ảnh</h5>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Name" />
                }
                else
                {
                    <div class="text-center text-muted">Chưa có hình ảnh</div>
                }
            </div>
        </div>
    </div>
    <div class="card-footer">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>