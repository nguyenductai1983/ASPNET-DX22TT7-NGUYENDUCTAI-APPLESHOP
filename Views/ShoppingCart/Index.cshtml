@model AppleShop.Models.ShoppingCartViewModel
@{
    ViewBag.Title = "Giỏ hàng";
}

<div class="container mt-5">
    <h2>Giỏ hàng của bạn</h2>

    @if (Model.CartItems.Count > 0)
    {
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col" colspan="2">Sản phẩm</th>
                    <th scope="col">Giá</th>
                    <th scope="col">Số lượng</th>
                    <th scope="col">Tổng cộng</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td style="width: 100px;">
                            <img src="@item.ImageUrl" class="img-fluid" alt="@item.ProductName" />
                        </td>
                        <td>@item.ProductName</td>
                        <td>@item.Price.ToString("N0") ₫</td>
                        <td>
                            @* Chức năng cập nhật số lượng sẽ làm sau *@
                            <input type="number" value="@item.Quantity" class="form-control" style="width: 80px;" />
                        </td>
                        <td>@item.Total.ToString("N0") ₫</td>
                        <td>
                            @* Chức năng xóa sẽ làm sau *@
                            <a href="#" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-end fw-bold fs-5">Tổng tiền</td>
                    <td colspan="2" class="fw-bold fs-5 text-danger">@Model.GrandTotal.ToString("N0") ₫</td>
                </tr>
            </tfoot>
        </table>

        <div class="text-end mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Tiếp tục mua sắm</a>
            <a href="#" class="btn btn-primary">Tiến hành thanh toán</a>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4" role="alert">
            Giỏ hàng của bạn đang trống.
        </div>
    }
</div>