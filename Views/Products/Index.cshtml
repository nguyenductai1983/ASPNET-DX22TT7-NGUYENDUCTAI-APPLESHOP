@model IEnumerable<AppleShop.Models.Product>

@{
    ViewBag.Title = "Tất cả sản phẩm";
}

<div class="container mt-4">
    <h2 class="mb-4">Tất Cả Sản Phẩm</h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ImageUrl" class="card-img-top p-3" alt="@item.Name" style="max-height: 300px; object-fit: contain;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-muted">@item.Category.Name</p>
                        <h6 class="card-subtitle mb-2 fw-bold">@item.Price.ToString("N0") ₫</h6>
                        <div class="mt-auto">
                            @Html.ActionLink("Xem chi tiết", "Details", "Products", new { id = item.Id }, new { @class = "btn btn-primary" })
                            <a href="@Url.Action("AddToCart", "ShoppingCart", new { productId = item.Id })" class="btn btn-outline-success">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>