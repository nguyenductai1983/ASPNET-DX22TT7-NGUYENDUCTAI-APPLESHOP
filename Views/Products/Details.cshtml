@model AppleShop.Models.Product

@{
    ViewBag.Title = Model.Name;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>

        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p class="text-muted fs-5">@Model.Category.Name</p>
            <hr>
            <p class="fs-4 fw-bold text-danger">@Model.Price.ToString("N0") ₫</p>
            <p class="mt-3">@Model.Description</p>

            <div class="d-grid gap-2 mt-4">
                <a href="@Url.Action("AddToCart", "ShoppingCart", new { productId = Model.Id })" class="btn btn-primary btn-lg">
                    <i class="bi bi-cart-plus-fill"></i> Thêm vào giỏ hàng
                </a>
            </div>
        </div>
    </div>
</div>
@section scripts {      
}