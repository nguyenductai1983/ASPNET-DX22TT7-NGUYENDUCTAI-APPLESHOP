@model AppleShop.Models.CheckoutViewModel

@{
    ViewBag.Title = "Thông tin thanh toán";
}

<div class="container mt-5">
    <h2>Thông tin thanh toán</h2>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <h4>Nhập thông tin giao hàng của bạn</h4>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.ShipName, new { @class = "control-label" })
                    @Html.EditorFor(model => model.ShipName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ShipName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.ShipAddress, new { @class = "control-label" })
                    @Html.EditorFor(model => model.ShipAddress, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ShipAddress, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.ShipPhoneNumber, new { @class = "control-label" })
                    @Html.EditorFor(model => model.ShipPhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ShipPhoneNumber, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Xác nhận và Đặt hàng" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        @Html.ActionLink("Quay lại giỏ hàng", "Index", "ShoppingCart")
    </div>
</div>